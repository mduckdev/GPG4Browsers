{
    "manifest_version": 3,
    "name": "GPG4Browsers",
    "version": "0.0.2",
    "description": "Extension for encrypting data with OpenPGP",
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "nativeMessaging",
        "contextMenus"
    ],
    "background": {
        "scripts": [ 
            "js/background.js"
        ],
        "service_worker":"js/background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["js/content.js"]
        }
    ],
    "icons": {
        "48": "icons/icon48.png",
        "96": "icons/icon96.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "mduckdev@gmail.com"
        }
    },
    "web_accessible_resources": [
        {
            "resources": [
                "icons/icon128.png",
                "icons/icon96.png",
                "icons/icon48.png",
                "js/*"
            ],
            "extension_ids": []
        }
    ]
}