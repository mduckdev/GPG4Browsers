{
    "manifest_version": 3,
    "name": "PGP4Browsers",
    "version": "0.0.1",
    "description": "Extension for encrypting data with OpenPGP",
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "nativeMessaging",
        "contextMenus"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "48": "icons/icon48.png",
        "96": "icons/icon96.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "mduckdev@gmail.com"
        }
    },
    "web_accessible_resources": [
        {
            "resources": [
                "popup.html",
                "add_key.html"
            ],
            "extension_ids": []
        }
    ]
}